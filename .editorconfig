# EditorConfig standard for micro-ocpp-esp32-devkitc
# Reference: https://editorconfig.org

# Root-level configuration
root = true

# Global settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Specific overrides (if needed in the future)
[*.md]
trim_trailing_whitespace = false

[*.cpp]
indent_style = space
indent_size = 2

[*.h]
indent_style = space
indent_size = 2
